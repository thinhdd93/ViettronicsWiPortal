<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtTieuDe"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp"
        android:text="Greatly hearted has who believe. Drift allow green son walls years for blush."
        android:layout_width="match_parent"
        style="@style/AlertDialog.AppCompat"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgIcon1"
                android:src="@mipmap/icon_information"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/txtNgayThongBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/05/2017"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:text="Số: "
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtSoHieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="578"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"/>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:text="Ký hiệu: "
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtKyHieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2218/PCT2-P8"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgIcon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_alarm"/>
        <TextView
            android:id="@+id/txtNgayBatDau"
            android:layout_toRightOf="@id/imgIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/05/2017"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_toRightOf="@id/txtNgayBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtNgayHoanThanh"
            android:layout_toRightOf="@id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/06/2017"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/imgIconDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_delete"/>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="3"
    android:text="Xử lý tồn tại phần thứ nhất TBA 220KV KonTum và đầu nối"
    android:layout_marginTop="5dp"
    style="@style/AlertDialog.AppCompat"
    android:textStyle="bold"
    android:id="@+id/listview_congviec_tieuDe"/>
  <LinearLayout
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/img_congviec_location"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@mipmap/icon_location"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:id="@+id/listview_congviec_diachi"
      android:text="Tầng 11, Tòa nhà Mipec, 229 Tây Sơn"
      android:layout_marginLeft="10dp"/>
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/img_congviec_thongbao"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@mipmap/icon_alarm"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:layout_marginLeft="10dp"
      android:id="@+id/listview_congviec_ngaygiaoviec"
      android:text="02/08/2017"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:text=" - "/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:id="@+id/listview_congviec_ngayhoanthanh"
      android:text="02/08/2017"/>
    />

  </LinearLayout>


</LinearLayout>
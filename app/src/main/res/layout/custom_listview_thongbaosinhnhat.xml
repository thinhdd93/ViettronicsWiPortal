<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/sinhnhat_img_avatar"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@mipmap/ic_avatar_square_512" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/AlertDialog.AppCompat"
                android:textStyle="bold"
                android:id="@+id/sinhnhat_tenCanBo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu Hoàng Long"/>
            <TextView
                style="@style/AlertDialog.AppCompat"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "/>
            <TextView
                style="@style/AlertDialog.AppCompat"
                android:textStyle="bold"
                android:id="@+id/sinhnhat_ChucVu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Giám Đốc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/sinhnhat_img_donVi"
                android:src="@mipmap/ic_diagram"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/sinhnhat_donVi"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Ban Tổng Giám Đốc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/sinhnhat_img_ngaySinh"
                android:layout_height="20dp"
                android:src="@mipmap/ic_birthday_128"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/sinhnhat_NgaySinh"
                android:gravity="center_vertical"
                android:text="13/12/1973"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/sinhnhat_img_mail"
                android:src="@mipmap/ic_mail_128"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/sinhnhat_Mail"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="luuhoanglong@viettronics.vn"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>